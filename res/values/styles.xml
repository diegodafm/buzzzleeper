<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- HEADER -->
    <style name="header" parent="Theme.BuzzzleeperTheme">
        <item name="android:background">@color/backgroundThemeA</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/white</item>
d</style>
    <!-- /HEADER -->

    <style name="scrollViewStyle" parent="Theme.BuzzzleeperTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/backgroundThemeA</item>
    </style>

    <!-- INPUT -->

    <style name="input" parent="Theme.BuzzzleeperTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/inputBackgroundColor</item>
        <item name="android:textColorHint">@color/inputTextColor</item>
        <item name="android:textSize">15dip</item>
        <item name="android:height">40dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="textEdit" parent="input">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <!-- /INPUT -->


    <!-- MAP -->
    <style name="frameMap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="infoMap">
        <item name="android:background">@color/backgroundThemeB</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="icPinMap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="textInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="textAddress" parent="@style/textInfo">
        <item name="android:textSize">12dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textCoordinate" parent="@style/textInfo">
        <item name="android:textSize">11dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <!-- /MAP -->


    <!-- BTN -->
    <style name="btnBackgroundThemeA">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/backgroundThemeA</item>
    </style>

    <style name="btnBackgroundThemeErrorA">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/backgroundThemeErrorA</item>
    </style>

    <style name="btnContent">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">100dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnContentConfirm" parent="@style/btnContent">
        <item name="android:background">@color/backgroundThemeB</item>
    </style>

    <style name="btnContentCancel" parent="@style/btnContent">
        <item name="android:background">@color/backgroundThemeErrorB</item>
    </style>

    <style name="btnSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/inputBackgroundColor</item>
        <item name="android:gravity">right</item>
    </style>
    <!-- /BTN -->

    <!-- SPINNER -->
    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- /SPINNER -->

</resources>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- HEADER -->
    <style name="header" parent="Theme.BuzzzleeperTheme">
        <item name="android:background">@color/backgroundThemeA</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- /HEADER -->

    <style name="scrollViewStyle" parent="Theme.BuzzzleeperTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/backgroundThemeA</item>
    </style>

    <!-- INPUT -->

    <style name="input" parent="Theme.BuzzzleeperTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/inputBackgroundColor</item>
        <item name="android:textColorHint">@color/inputTextColor</item>
        <item name="android:textSize">15dip</item>
        <item name="android:height">40dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="textEdit" parent="input">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <!-- /INPUT -->


    <!-- MAP -->
    <style name="frameMap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="infoMap">
        <item name="android:background">@color/backgroundThemeB</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="icPinMap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="textInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="textAddress" parent="@style/textInfo">
        <item name="android:textSize">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textCoordinate" parent="@style/textInfo">
        <item name="android:textSize">11dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <!-- /MAP -->


    <!-- BTN -->
    <style name="imgContainer">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="btnBackgroundThemeA" parent="@style/imgContainer">
        <item name="android:background">@drawable/btn_theme_default</item>
    </style>

    <style name="btnBackgroundThemeErrorA" parent="@style/imgContainer">
        <item name="android:background">@drawable/btn_theme_error</item>
    </style>

    <style name="btnBackgroundThemeEditA" parent="@style/imgContainer">
        <item name="android:background">@drawable/btn_theme_edit</item>
    </style>

    <style name="btnContent">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnContentConfirm" parent="@style/btnContent">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnContentCancel" parent="@style/btnContent">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnSpinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/inputBackgroundColor</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="btnShowProperties">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="contentBtnShowProperties">
        <item name="android:textColor">@color/grayText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="btnRemove" parent="@style/btn">
        <item name="android:background">@color/backgroundThemeErrorB</item>
    </style>

    <style name="btnAdd" parent="@style/btn">
        <item name="android:background">@color/backgroundThemeB</item>
    </style>

    <style name="btnEdit" parent="@style/btn">
        <item name="android:background">@color/backgroundThemeEditB</item>
    </style>

    <!-- /BTN -->


    <!-- SPINNER -->

    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListViewAppTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewAppTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <!-- /SPINNER -->


    <!-- BUSSTOPITEM -->
    <style name="busStopItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:background">@drawable/bus_stop_item_border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="blrName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#03555C</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="blrAddress">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#919191</item>
        <item name="android:textSize">14dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="imgMap">
        <item name="android:layout_width">120dip</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:padding">1dip</item>
    </style>
    <!-- /BUSSTOPITEM -->
    
    <!-- TAB -->
	<style name="tabWidget">
	    <item name="android:height">60dip</item>
	</style>
	<!--/TAB -->

    <style name="borderInfo">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/grayBorder</item>
    </style>

</resources>
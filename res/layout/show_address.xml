<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addAddressScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="15dip"
    android:background="@drawable/container_dropshadow"
    tools:context=".AddAddress" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtBlrAddressName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtBlrAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/rlGoogleMap"
            style="@style/frameMap" >

            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/googleMap"
                android:name="br.com.dafm.android.buzzzleeper.AddAddress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.google.android.gms.maps.SupportMapFragment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlInfoMap"
            style="@style/infoMap"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/icPinMap"
                style="@style/icPinMap"
                android:src="@drawable/ic_pin_map" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtAddressLocation"
                    style="@style/textAddress"
                    android:text="" />

                <TextView
                    android:id="@+id/txtCoordinates"
                    style="@style/textCoordinate"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtBlrAddressBuffer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtBlrAddressRingtone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/txtBlrAddressUpdate"
                android:layout_width="fill_parent"
                android:text="@string/editBusStop"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/txtBlrAddressRemove"
                android:layout_width="fill_parent"
                android:text="@string/removeBusStop"
                android:layout_height="wrap_content" />
            
        </LinearLayout>
    </LinearLayout>

</ScrollView>